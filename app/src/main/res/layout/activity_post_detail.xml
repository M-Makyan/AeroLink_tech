<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back_arrow"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Creator Info: Profile Image, Username & Timestamp -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <!-- Creator Profile Image -->
        <ImageView
            android:id="@+id/creator_image"
            android:layout_width="68dp"
            android:layout_height="63dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:contentDescription="Creator Profile Image"
            android:src="@drawable/ohms_law" />

        <!-- Username + Time Posted stacked vertically -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Creator Username -->
            <TextView
                android:id="@+id/creator_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="markmakyan"
                android:textSize="24sp"
                android:textStyle="italic"
                android:textColor="@color/black" />

            <!-- Time Posted -->
            <TextView
                android:id="@+id/detail_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours ago"
                android:textSize="14sp"
                android:textColor="@color/blue"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Post Title -->
    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- Post Image -->
    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_marginBottom="12dp" />

    <!-- Post Description -->
    <TextView
        android:id="@+id/detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black" />

</LinearLayout>