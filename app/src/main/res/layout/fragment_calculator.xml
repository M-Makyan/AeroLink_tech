<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/btnRocketCalculator"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button"
            android:contentDescription="Rocket Calculator"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/rocket" />

        <ImageButton
            android:id="@+id/btnOtherCalculator"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_button"
            android:contentDescription="Wing Loading Calculator"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/plane" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/btnRocketCalculator2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button"
            android:contentDescription="Rocket Calculator"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/high_voltage" />

        <ImageButton
            android:id="@+id/btnOtherCalculator2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_button"
            android:contentDescription="Wing Loading Calculator"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cannon" />
    </LinearLayout>

</LinearLayout>