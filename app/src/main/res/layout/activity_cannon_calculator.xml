<!-- res/layout/activity_projectile_motion_calculator.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="100dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Go Back"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_arrow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/speedInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Initial Speed (m/s)"
                android:inputType="numberDecimal"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/angleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Launch Angle (Â°)"
                android:inputType="numberDecimal"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/heightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Initial Height (m)"
                android:inputType="numberDecimal"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/calculateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:backgroundTint="@color/blue" />

            <Button
                android:id="@+id/clearButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/blue" />

            <TextView
                android:id="@+id/timeOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time of Flight: -"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/heightOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Max Height: -"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/rangeOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Range: -"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
