<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background"> <!-- Set your background image here -->

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Go Back"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_arrow" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnOhmsLaw"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="Ohm's Law Calculator"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ohms_law" />

                <ImageButton
                    android:id="@+id/btnRCCircuit"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="RC Circuit Calculator"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rc_circuit" />
            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <ImageButton
                    android:id="@+id/btnReactance"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="Inductor and Capacitor Reactance Calculator"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/inductor_reactance" />

                <ImageButton
                    android:id="@+id/btnPowerSupply"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="Power Supply Calculator"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/power_supply" />
            </LinearLayout>

            <!-- Third Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <ImageButton
                    android:id="@+id/btnBatteryLife"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="Battery Life Estimator"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/battery" />

                <ImageButton
                    android:id="@+id/btnSolarPower"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="Solar Panel Power Estimator"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/solar_panel" />
            </LinearLayout>

            <!-- Fourth Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <ImageButton
                    android:id="@+id/btnWireGauge"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="Wire Gauge Calculator"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/wire_gauge" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>