<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AeroLink"
        tools:targetApi="31">

        <activity android:name=".LoginActivity"
            android:exported="true">
        </activity>

        <activity android:name=".RegisterActivity" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <!-- Calculator Activities -->
        <activity android:name=".RocketCalculatorActivity" android:exported="false" />
        <activity android:name=".WingLoading" android:exported="false" />
        <activity android:name=".ElectricityCalculatorActivity" android:exported="false" />
        <activity android:name=".OhmsLawCalculatorActivity" android:exported="false" />
        <activity android:name=".BatteryLifeEstimatorActivity" android:exported="false" />
        <activity android:name=".SolarPanelCalculatorActivity" android:exported="false" />
        <activity android:name=".PostDetailActivity" />

        <!-- Post-related Activities -->
        <activity android:name=".CreatePostActivity" android:exported="false" />

    </application>
</manifest>